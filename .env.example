# Telegram bot token issued by @BotFather
TELEGRAM_TOKEN=token

# Yandex OAuth app credentials
YANDEX_CLIENT_ID=your-yandex-client-id
YANDEX_CLIENT_SECRET=your-yandex-client-secret
# Redirect URL configured in Yandex OAuth (e.g. https://your-domain.tld/oauth/callback)
YANDEX_REDIRECT_URI=https://your-domain.tld/oauth/callback

# Public URL of your bot (used to show a link in the callback response)
PUBLIC_APP_HOST=https://t.me/your_bot_name

# FastAPI host/port (the callback endpoint listens here)
API_HOST=0.0.0.0
API_PORT=8000

# Path to the SQLite database file
DATABASE_PATH=data/users.db